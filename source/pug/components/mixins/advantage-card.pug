mixin advantagecard(value)
  .advantage-card
    .advantage-card__image-wrapper
      picture
        source(srcset!="./img/content/" + value.imageName + ".webp 1x," +  "./img/content/" + value.imageName + "@2x.webp 2x")
        img(src!="./img/content/" + value.imageName +".webp" width=488 height=281 alt="#")
    .advantage-card__info
      p.advantage-card__title!= value.title
      .advantage-card__description
        p!= value.description


